<Window x:Class="CreateSteamPicturesJunctionLinks.PreviewImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview" Height="450" Width="759" Topmost="True" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ToolWindow">
	<Grid Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
		<Image x:Name="ImagePreview" Margin="0,0,0,35" />
		<Label x:Name="LabelNoImagesFound" Content="No images found" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"/>
		<Button x:Name="BtnClose" Content="Close" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" IsCancel="True" Click="BtnClose_Click"/>

	</Grid>
</Window>
